<view class="all">
<view class="weui-cells weui-cells_after-title">
  <view class="head">完善个人信息</view>
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">我的头像</view>
    </view>
   <open-data type="userAvatarUrl"></open-data>
</view>
 <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-label">姓名</view>
      <view class="weui-cell__bd">
        <input bindinput="realname" class="weui-input" placeholder="代取快递必需"></input>
      </view>
    </view>
    <view class="weui-cell weui-cell_select">
      <view class="weui-cell__hd weui-cell__hd_in-select-after">
        <view class="weui-label">性别</view>
      </view>
      <view class="weui-cell__bd">
<picker bindchange="bindSexChange" value="{{sexIndex}}" range="{{sexList}}">
<view class="manorwoman">{{sexList[sexIndex]}}</view>
        </picker>
      </view>
    </view>
  </view>
</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-label">微信号</view>
      <view class="weui-cell__bd">
        <input bindinput="weixin" class="weui-input" placeholder="方便对方联系"></input>
      </view>
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-label">扣扣号</view>
      <view class="weui-cell__bd">
        <input bindinput="tencent"class="weui-input" placeholder="备用联系渠道"></input>
      </view>
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-label">手机号</view>
      <view class="weui-cell__bd">
        <input bindinput="mobile" class="weui-input" placeholder="作为登录账号"></input>
      </view>
    </view>
  </view>
    <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-label">密码</view>
      <view class="weui-cell__bd">
        <input bindinput="password" class="weui-input" placeholder="作为登录密码"></input>
      </view>
    </view>
  </view>
